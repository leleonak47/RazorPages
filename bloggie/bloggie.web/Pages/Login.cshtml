@page
@model bloggie.web.Pages.LoginModel
@{
}


<div class="container mx-auto">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-6">

            <h1 class="mb-3 mt-5 h3">Login</h1>

            <partial name="_Notification">

                <form method="post">

                    <div class="mb-3">
                        <label class="form-label">username</label>
                        <input type="text" class="form-control" asp-for="LoginViewModel.Username" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Password</label>
                        <input type="password" class="form-control" asp-for="LoginViewModel.Password" />
                    </div>

                    <div class="mb-3">
                        <button type="submit" class="btn btn-dark text-light">Login</button>
                    </div>

                </form>
        </div>
    </div>
</div>